<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nearest_spot_dialog_box"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:layout_margin="0dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/rounded_top"
    android:padding="20px"
    android:visibility="gone"
    android:orientation="vertical"
    android:textColor="@color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:paddingBottom="20dp"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/group">

        <TextView
            android:id="@+id/spotTextViewTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="0.3in"
            android:textStyle="bold"
            android:textAlignment="center"
            tools:gravity="center"
            tools:textAlignment="center" />

        </LinearLayout>



            <TextView
                android:id="@+id/firstText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:padding="10dp"
                android:text="We've found a place for you to park!"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/neerestParking"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text=" Spot 12"
                android:gravity="center"
                android:textColor="#9C27B0"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                tools:gravity="center"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="203dp" />

            <TextView
                android:id="@+id/secondText"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:text=" It is the position closest to you"
                android:textSize="20sp"
                android:textStyle=""
                tools:gravity="center"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="281dp" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <Button
                android:id="@+id/btnSpotAccept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="100dp"
                android:background="@drawable/rect_border"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Accept"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnSpotCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#E6F5FA"
                android:gravity="center"
                android:textAllCaps="false"
                android:paddingVertical="10dp"
                android:paddingHorizontal="100dp"
                android:text="Cancel"
                android:textColor="#6BBBDB"
                android:textSize="20dp" />




        </LinearLayout>

    </LinearLayout>



</LinearLayout>