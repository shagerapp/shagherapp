<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/listCustomItem"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:gravity="center"
    tools:context=".CustomItemView">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/rect_border"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_cancel_booked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:visibility="invisible"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:paddingHorizontal="5dp"
            android:paddingVertical="6dp"
            android:background="@drawable/rounded_edittext"
            android:text="Cancel Booking"
            android:drawableLeft="@drawable/quantum_ic_clear_white_24"
            android:drawablePadding="0dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_marginHorizontal="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Name"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Status"
                android:textSize="14sp">

            </TextView>

        </LinearLayout>

        <ImageButton
            android:id="@+id/flag_status"
            android:layout_width="63dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/baseline_location_on_24"
            android:backgroundTint="@color/source" />

    </RelativeLayout>






</LinearLayout>