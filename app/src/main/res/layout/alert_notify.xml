<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alert_notify"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="0dp"
    android:layout_marginTop="0dp"
    android:background="@drawable/rounded_top"
    android:padding="5px"
    android:visibility="visible"
    android:orientation="vertical"
    android:textColor="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="rtl"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:padding="10dp">

        <Button
            android:id="@+id/alert_btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/baseline_close_24" />

        <ImageView

            android:id="@+id/top_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/baseline_email_24" />


    </RelativeLayout>



        <ImageView
            android:id="@+id/center_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/signal" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:padding="10dp">


                <TextView
                    android:id="@+id/alert_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="fsdfdsf"
                    android:layout_margin="10dp"
                    android:textStyle="bold"
                    android:textSize="24dp"/>


                <TextView
                    android:id="@+id/alert_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="fsdfdsf"
                    android:gravity="center"
                    android:textDirection="rtl"
                    android:textSize="20dp"/>



            </LinearLayout>

    <Button
        android:id="@+id/BtnResendEmail"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rpass"
        android:visibility="gone"
        android:autoLink="none"
        android:layout_margin="10dp"
        android:backgroundTint="#D8D5DD"
        android:pointerIcon="hand"
        android:textAllCaps="false"
        android:text="Resend  Verification link to email  "
        android:textColor="@color/purple_500"
        android:textSize="20dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_margin="30dp"
                    android:gravity="end"
                    android:layoutDirection="ltr">

                    <TextView
                        android:id="@+id/alert_btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@color/secondry"
                        android:drawableLeft="@drawable/baseline_close_24"
                        android:layoutDirection="rtl"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="12dp"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="20dp" />


            <Button

                android:id="@+id/alert_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="OK"
                android:textColor="#FFF"
                android:textSize="20dp" />

        </RelativeLayout>






</LinearLayout>